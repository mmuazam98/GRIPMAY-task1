<%- include("partials/nav") %>
<div class="container">
    <div class="modal">
      <button class="closemd">✖</button>
      <img src="../assets/checked.svg" alt="cookies-img" />
      <p>Transaction was completed successfully.</p>
      <p>Transaction ID: <span id="tid"></span></p>
      <button class="accept">Okay!</button>
    </div>
  </div>
<section>
    <div class="child">
        <div class="card">
            <div class="face front">
                <h3 class="debit">Debit Card</h3>
                <h3 class="bank"><span><img src="../assets/logo.svg" alt=""></span> Banco</h3>
                <img class="chip" src="../assets/chip.png" alt="chip">
                <h3 class="number"><%= customer.acc_no %></h3>
                <h5 class="valid"><span>Valid<br>Thru</span><span>06/25</span></h5>

                <h5 class="card-holder"><%= customer.name %></h5>
                <!-- <h3 class="balance">₹<%= customer.balance %></h3> -->
            </div>
        </div>
    </div>
    <div class="child form">
        <form action="#" id="form">
            <div class="row">
                <div class="col">
                    <h4>Name</h4>
                    <h1><%= customer.name%></h1>
                </div>
                <div class="col">
                    <h4>Account Type</h4>
                    <h1><%= customer.acc_type %> Account</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h4>Email</h4>
                    <h1 id="email"><%= customer.email %></h1>
                </div>
                <div class="col">
                    <h4>Balance</h4>
                    <h1><span class="balance">₹<%= customer.balance %></span></h1>
                </div>
            </div>
            <div class="row last">
                <button id="show">Transfer Money</button>
            </div>
            <div class="row hidden">
                <div class="col">
                    <h4>Send Money</h4>
                   <select id="accounts">
                       <% customers.forEach(c => { %>
                            <% if (c.name!==customer.name) { %>
                                 <option value="customer" data-uid="<%= c.userID %>"><%= c.name %> </option>
                            <% } %>
                       <% }) %>
                    </select>
                </div>
                <div class="col">
                    <h4>Amount</h4>
                    <input type="text" placeholder="Amount" id="amount" required>
                </div>
            </div>
            <div class="row last hidden">
                <button type="submit" id="transfer">Transfer</button>
            </div>
        </form>
    </div>
</section>
<script>
    let userID = '<%=customer.userID%>';
    let userName = '<%=customer.name%>';
</script>

</body>
</html> 